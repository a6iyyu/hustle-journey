{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "outDir": "./src/dist",               // Output directory.
    // "rootDir": "./src",                // Source code directory.
    "skipLibCheck": true,
    "strict": true,
    "target": "ES5",
    "paths": {
      "~/*": ["public/*"],
      "@/*": ["src/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["./public/**/*", "./src/**/*"]
}